(full-reset)
(in-knowledge-base m21-tbox m21-abox)

(signature :atomic-concepts (Falsification Garlic COVID-19 Product Disease Virus)
           :roles ((treats   :domain Product    :range Disease)
                   (prevents :domain Product    :range Disease)
                   (causes   :inverse caused-by)
                  )
           :attributes ((string has-string))
           :individuals (m21)
)
; ------------------------------------------------
; Part 1: True/Trusted/Validated medical knowledge
; ------------------------------------------------
(implies Garlic Product)
(equivalent COVID-19 (and Disease (some caused-by Virus)))
(implies Garlic (all treats (not (some caused-by Virus))))


; ------------------------------------------------------------
; Part 2: Medical myth manually translated in description logic
; ------------------------------------------------------------
(instance m21 (and Falsification (string= has-string "Garlic effective in preventing the new coronavirus")))
(implies Garlic (some prevents COVID-19))


; ------------------------------------------------------------
; Part 3: Queries to check incoherence/inconsistency/cycles
; ------------------------------------------------------------
(tbox-coherent?)
(check-tbox-coherence)
(check-concept-coherence Garlic)
(abox-consistent?)

; -----------------------------------------------------------------
; Part 4: Repair ontology: forget some axioms from the medical myth
; -----------------------------------------------------------------
(forget (:tbox m21-tbox) (implies Garlic (some treats COVID-19)))
(tbox-coherent?)


